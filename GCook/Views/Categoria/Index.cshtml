@model IEnumerable<GCook.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Categorias</h1>

<p class="mt-4 mb-2">
    <a asp-action="Create" class="btn btn-danger">
        <i class="bi bi-plus-circle"></i> Incluir Categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExibirHome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExibirHome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="me-2">
                    <i class="bi bi-pencil-square text-secondary"></i>
                </a>
                <a asp-action="Details" asp-route-id="@item.Id" class="me-2">
                    <i class="bi bi-search text-secondary"></i>
                </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-decoration-none">
                    <i class="bi bi-trash3 text-danger"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
